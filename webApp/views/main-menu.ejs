<!doctype html>
<html lang="pt-Pt">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="images/icons.js"></script>
	<link rel="stylesheet" href="css/style.css">
  <title>Gestor de U.C's</title>
</head>


<nav class="navbar navbar-expand-lg navbar-light">
  <div class="container-fluid">
    <a class="navbar-brand fw-bolder fs-2 ms-5 text-white" href="/">BOT</a>
    <div class="collapse navbar-collapse" id="navbarScroll">
      <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;"></ul>
      <div class="d-flex">
        <img src="https://deisi.ulusofona.pt/logotipo-lusofona.svg" style="width: 90%">
      </div>
    </div>
  </div>
</nav>


<body style="background-color: #0b406c;">
  <div class="container">
    <div class="row">
      <div class="col-sm-6" style="margin-top:15%">
        <div class="card">
          <div class="card-body text-center">
            <h1 class="card-title" style="color: #ffffff">Unidades Curriculares</h1>
            <br>
            <!-- <p class="card-text" style="color: #ffffff">Confira a lista de todas as unidades curriculares que pode moderar</p> -->
            <br>
          </div>
          <ul class="list-group list-group-flush">

            <% if (ucs.length > 0) { %>
              <% for (let uc of ucs) { %>
                <li class="list-group-item"><a href="/uc-details/<%= uc.uuid %>" style="color: #ffffff"><i class="fa-solid fa-block-quote p-2"></i> <%= uc.uc_name %> </a></li>
              <% } %>               
            <% } else { %>
              <li class="list-group-item"><a style="color: #ffffff">Ainda não possui unidades curriculares</a></li>
            <% } %> 
            
            <!-- 
            <li class="list-group-item"><a href="/uc-details" style="color: #ffffff"><i class="fa-solid fa-block-quote p-2"></i> Redes de Computadores</a></li>
            <li class="list-group-item"><a href="/uc-details" style="color: #ffffff;"><i class="fa-solid fa-block-quote p-2"></i> Arquitetura Avançada de Computadores</a></li>
            -->
          </ul>
          <div class="card-body text-center">
            <br>
            <a href="https://discord.gg/DM6G52EkdB" target="_blank" class="btn btn-outline-light btn-lg">Adicionar UC</a>
            <a data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-outline-light btn-lg">Alterar password</a>
          </div>
        </div>
      </div>
      <div class="col-sm-6 mt-5 d-sm-none d-md-block d-none d-sm-block">
        <img class="imagens-hs" src="images/main-page.png" style="width: 99%">
      </div>
    </div>
    <nav class="navbar fixed-bottom navbar-light ">
      <div class="container-fluid">
        <p class="navbar-brand text-white ms-auto"><%= usr %> <a class="text-white" href="/sair"><i class="ms-3 fa-duotone fa-power-off fa-lg"></i></a></p>
      </div>
    </nav>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Mudar password de acesso</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form action="/update/password" method="post">
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Nova password</label>
                <input type="password" class="form-control" id="password" name="password">
              </div>
            
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">Salvar alterações</button>
          </form>
          </div>
        </div>
      </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>



  </html>
